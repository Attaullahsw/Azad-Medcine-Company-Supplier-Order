<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.example.mtci.azadmedicinecompany.AllCartRecord">
    <FrameLayout
        android:id="@+id/frm_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        >
        <TextView
            android:id="@+id/txt_error_msg"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Order Is placed yet"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textColor="@color/red"
            android:gravity="center"
            />
        <ListView
            android:id="@+id/allRecordListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0dp"
            android:background="@drawable/grand_total_bac">
        </ListView>
    </FrameLayout>

    <Button
        android:id="@+id/btn_sended_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sended Orders"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:layout_below="@id/frm_l"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        />



</LinearLayout>
