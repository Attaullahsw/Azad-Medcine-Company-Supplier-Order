<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.example.mtci.azadmedicinecompany.ChooseCustomer">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:clickable="false"
        >

        <!--logo-->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp"
            android:padding="30dp"
            app:srcCompat="@drawable/logo" />


        <!--Floating hint Autocomplete customer edit text-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/floating_hint_chooseCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            app:hintTextAppearance="@style/FloatingHintStyle">
            <AutoCompleteTextView
                android:id="@+id/edt_chooseCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:ems="10"
                android:hint="Tape Customer"
                android:inputType="textPersonName"
                android:padding="16dp" />
        </android.support.design.widget.TextInputLayout>

        <!--button for choose custome-->
        <Button
            android:id="@+id/btn_chooseCustomer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/floating_hint_chooseCustomer"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rounded_button"
            android:padding="16dp"
            android:textColor="@color/white"
            android:text="Choose Customer" />


    </RelativeLayout>
</ScrollView>