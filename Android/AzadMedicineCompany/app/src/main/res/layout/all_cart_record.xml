<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/txt_all_record_c_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="customer_name"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorAccent"/>

            <LinearLayout
                android:id="@+id/lin_order"
                android:layout_below="@id/txt_all_record_c_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Order No."
                    android:layout_weight="2"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:id="@+id/txt_order_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="1"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/lin_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Order Date"
                    android:layout_weight="2"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:id="@+id/txt_order_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="1/11/2018"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_all_record_c_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>